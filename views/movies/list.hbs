<h1 Class="list">Ironhack Cinema</h1>
<h4 Class="list">Click on the movie to check the showtimes!</h4>
<div class="row row-cols-3 row-cols-md-3 g-4">
  {{#each movies as |movie|}}
  <div class="col">
    <div class="card text-center">
      <img class="img-center" src="{{movie.image}}" alt="image">
      <div class="card-body">
        <h5 class="card-title">{{movie.title}}</h5>
        <a href="/{{movie.id}}">See more</a>
      </div>
    </div>
  </div>
  {{/each}}
</div>